<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MyWeather.AppWidget.Container"
    android:layout_width="match_parent"
    android:id="@+id/widgetClick"
    android:layout_height="130dp"
    android:background="#00FFFFFF"
    android:theme="@style/Theme.MyWeather.AppWidgetContainer">

    <ImageView
        android:id="@+id/icon_widget"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:elevation="1dp"
        android:src="@drawable/rain_d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="@drawable/widget_gradient"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/temp_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="4Â°"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="70dp"
                android:maxLines="1"
                android:text="Cloudy"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tashkent, 23.03"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>